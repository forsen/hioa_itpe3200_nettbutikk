@model Nettbutikk.admin.Models.ProductDetail


@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (ViewBag.result!=null && ViewBag.result) { 
        ViewBag.Title = "detta gikk bra";
    }
}

@using (Html.BeginForm("UpdateProduct"))
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="panel panel-default userpanel">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                    <form role="form">
                        <h2>
                            <span class="glyphicon glyphicon-glass"></span>Oppdater produkt
                        </h2>   
                        <div class="row">
                            <hr />
                            <div class="col-md-12">
                                <div class="form-group">
                                    <h3>Varenummer: "@Html.DisplayFor(model => model.itemnumber)"</h3>
                                    @Html.HiddenFor(model => model.itemnumber)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <h4>@Html.LabelFor(model => model.name):</h4>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Produkt" } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <h4>@Html.LabelFor(model => model.price):</h4>
                                    @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Beskrivelse" } })
                                    @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <h4>@Html.LabelFor(model => model.volum):</h4>
                                    @Html.EditorFor(model => model.volum, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Beskrivelse" } })
                                    @Html.ValidationMessageFor(model => model.volum, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <h4>@Html.LabelFor(model => model.producerid):</h4>
                                    @Html.DropDownListFor(x => x.producerid, Model.producerList, new { @id = "producer", @class="form-control input-lg" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <h4>@Html.LabelFor(model => model.description):</h4>
                                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Beskrivelse"} })
                                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <h4>@Html.LabelFor(model => model.longDescription):</h4>
                                    @Html.TextAreaFor(model => model.longDescription,  new { @class = "form-control", placeholder = "Lang beskrivelse",rows=5 })
                                    @Html.ValidationMessageFor(model => model.longDescription, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <h4>@Html.LabelFor(model => model.subCategoryid):</h4>
                                    @Html.DropDownGroupListFor(m => m.subCategoryid, Model.subCategoryList, new{ @class="form-control input-lg"})
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <h4>@Html.LabelFor(x => x.countryid)</h4>
                                    @Html.DropDownListFor(x => x.countryid, Model.countryList, new { @id = "country",@class="form-control input-lg" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="submit" value="Oppdater produkt" class="btn btn-success"  />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}