@model Nettbutikk.admin.Models.ProductMenu
@{
    ViewBag.Title = "ListProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="submenu">
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="navUl pull-right">
                    <a href="@Url.Action("ListCustomers", "Customer")">
                        <i class="glyphicon glyphicon-user"> </i> Undermeny 1
                    </a>

                    <a href="@Url.Action("ListProducts", "Product")" id="product">
                        <i class="glyphicon glyphicon-user"> </i> List alle
                    </a>
            </div>
        </div>
    </div>
</div>

<div>
    <div class="jumbotron" style="padding-top:2px">
        <div class="container">

            <h3><span class="glyphicon glyphicon-user"></span> Produktoversikt </h3>
            <hr />

            <div class="form-group">
                <div class="input-group">
                    @Html.TextBox("searchString", null, new { id = "userSearch", @class = "form-control", @style = "margin-top:12px;", placeholder = "Søk (Mangler funksjon)" })

                </div>
            </div>
            <div>
                @Html.Action("ListPartial")
            </div>
        </div>
    </div>


</div>

<script type="text/javascript">
    $(document).ready(function () {


    
        $("#categoryDrop").bind("change", function () {
            var $detailDiv = $('#tullbal');
            var url = "/Product/ListPartial/" + $("#categoryDrop").val();

            $.get(url, function (data) {
                $detailDiv.replaceWith(data);
            });

        });
    })
</script>
