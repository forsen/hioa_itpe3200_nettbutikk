@model Nettbutikk.admin.Models.CustomerDetail
@{
    ViewBag.Title = "CustomerDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Custom/MainSheet.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-default userpanel">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                    <form role="form">
                        <h3>
                            <span class="glyphicon glyphicon-user"></span> Kunderdetaljer
                        </h3>
                        
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <h4>Kundenummer: "@Html.DisplayFor(model => model.id)"</h4>
                                        </div>
                                    </div>
                                </div>
                        <hr style="margin-top:0; margin-bottom:10px" />
                        <div class="row">
                            <div class="col-md-12">
                                <a href="@Url.Action("ListCustomerOrders", new { id = Model.id})" title="Endre" class="btn btn-primary" id="primaryButton">
                                    <span class="glyphicon glyphicon-align-justify"></span>  Se ordre
                                </a>




                                <!-- Funker ikke helt enda. CS1061: 'Nettbutikk.admin.Models.CustomerDetail'
            does not contain a definition for 'admin' and no extension method 'admin'
                accepting a first argument of type 'Nettbutikk.admin.Models.CustomerDetail'
                 could be found (are you missing a using directive or an assembly reference?)
            -->
                                @if (Model.admin == false)
                                {
                                    <a href="@Url.Action("makeAdmin", new { id = Model.id})" title="Gjør til admin" class="btn btn-primary" id="primaryButton">
                                        <span class="glyphicon glyphicon-user"></span><span class="glyphicon glyphicon-arrow-up"></span>  Gjør til admin
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("revokeAdmin", new { id = Model.id})" title="Fjern som admin" class="btn btn-primary" id="primaryButton">
                                        <span class="glyphicon glyphicon-user"></span><span class="glyphicon glyphicon-arrow-down"></span>  Fjern som admin
                                    </a>
                                }

                            </div>



                        </div>
                        <hr style="margin-top:10px; margin-bottom:0" />
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group" style="margin-bottom:0px">
                                            <h5>Fornavn:</h5>
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.EditorFor(model => model.firstname, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Produkt", tabindex = "1", autofocus = "" } })
                                            @Html.ValidationMessageFor(model => model.firstname, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <h5>Etternavn:</h5>
                                            @Html.EditorFor(model => model.lastname, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Beskrivelse", tabindex = "1", autofocus = "" } })
                                            @Html.ValidationMessageFor(model => model.lastname, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <h5>Addresse:</h5>
                                            @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Beskrivelse", tabindex = "1", autofocus = "" } })
                                            @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h5>E-mail:</h5>
                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Produsent", tabindex = "3" } })
                                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <h5>Telefon:</h5>
                                            @Html.EditorFor(model => model.phonenumber, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Telefonnummer", tabindex = "1", autofocus = "" } })
                                            @Html.ValidationMessageFor(model => model.phonenumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h5>Poststed</h5>
                                        @Html.EditorFor(model => model.postalarea, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Poststed", tabindex = "3" } })
                                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6">
                                        <h5>Postnummer</h5>
                                        @Html.EditorFor(model => model.postalcode, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Postnummer", tabindex = "3" } })
                                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row" style="margin-top: 20px">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <input type="submit" value="Endre bruker" class="btn btn-success" />
                                        </div>
                                    </div>
                                </div>
</form>
                </div>
            </div>
        </div>
    </div>
}

