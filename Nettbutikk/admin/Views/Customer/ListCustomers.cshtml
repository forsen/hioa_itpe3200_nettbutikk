@model PagedList.IPagedList<Nettbutikk.admin.Models.UserInfo>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListCustomers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SelectList itemsPerPageList = DefaultValues.ItemsPerPageList;
}
<link href="~/Content/Custom/MainSheet.css" rel="stylesheet" />

    <div class="jumbotron" style="padding-top:2px">
        <div class="container">

            <h3><span class="glyphicon glyphicon-user"></span> Brukeroversikt </h3>
            <hr />

            <div class="form-group">
                <div class="input-group">
                    @Html.TextBox("searchString", null, new { id = "userSearch", @class = "form-control", @style = "margin-top:12px;", placeholder = "Søk (Mangler funksjon)" })
                </div>
            </div>
            @using(Html.BeginForm("ListCustomers","Customer",FormMethod.Post))
            {
                @Html.DropDownList("ItemsPerPage", itemsPerPageList, new { @id = "ItemsPerPageList", onchange="this.form.submit();"})
            }
            <div class="panel panel-default">
                <table>
                    <tr>
                        <td>
                            <b><a href="@Url.Action("ListCustomers", new { sortOrder = ViewBag.IDSortParm, currentFilter = ViewBag.CurrentFilter})">@Html.DisplayNameFor(modelItem => Model[0].id)</a></b>
                        </td>
                        <td>
                            <b><a href="@Url.Action("ListCustomers", new { sortOrder = ViewBag.FirstNameSortParm, currentFilter = ViewBag.CurrentFilter})">@Html.DisplayNameFor(modelItem => Model[0].firstname)</a></b>
                        </td>
                        <td>
                            <b><a href="@Url.Action("ListCustomers", new { sortOrder = ViewBag.LastNameSortParm, currentFilter = ViewBag.CurrentFilter})">@Html.DisplayNameFor(modelItem => Model[0].lastname)</a></b>
                        </td>
                        <td>
                            <b><a href="@Url.Action("ListCustomers", new { sortOrder = ViewBag.AddressSortParm, currentFilter = ViewBag.CurrentFilter})">@Html.DisplayNameFor(modelItem => Model[0].address)</a></b>
                        </td>
                        <td>
                            <b><a href="@Url.Action("ListCustomers", new { sortOrder = ViewBag.EMailSortParm, currentFilter = ViewBag.CurrentFilter})">@Html.DisplayNameFor(modelItem => Model[0].email)</a></b>
                        </td>
                        <td>
                            <b><a href="@Url.Action("ListCustomers", new { sortOrder = ViewBag.PostAreaSortParm, currentFilter = ViewBag.CurrentFilter})">@Html.DisplayNameFor(modelItem => Model[0].postalarea)</a></b>
                        </td>
                        <td>
                            <b><a href="@Url.Action("ListCustomers", new { sortOrder = ViewBag.PostCodeSortParm, currentFilter = ViewBag.CurrentFilter})">@Html.DisplayNameFor(modelItem => Model[0].postalcode)</a></b>
                        </td>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr class="rows">
                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.firstname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.lastname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.postalarea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.postalcode)
                            </td>
                            <td>
                                <button class="btn btn-xs btn-default" style="margin-top:0px" type="submit"><i class="glyphicon glyphicon-pencil"></i></button>
                                <button class="btn btn-xs btn-default" style="margin-top:0px" type="submit"><i class="glyphicon glyphicon-align-justify"></i></button>
                                <button class="btn btn-xs btn-danger" style="margin-top:0px" type="submit"><i class="glyphicon glyphicon-trash"></i></button>
                        </tr>
                    }
                </table>
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                @Html.PagedListPager(Model, page => Url.Action("ListCustomers", new { page, itemsPerPage = ViewBag.CurrentItemsPerPage, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }));


            </div>



        </div>
    </div>



