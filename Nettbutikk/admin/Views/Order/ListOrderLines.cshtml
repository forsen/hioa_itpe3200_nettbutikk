@model List<Nettbutikk.admin.Models.OrderLineViewModel>
@{
    ViewBag.Title = "ListOrderLines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron" style="padding-top:2px">
    <div class="row">


        <h3><span class="glyphicon glyphicon-align-justify"></span> Ordrelinjeoversikt </h3>

        <hr />
        <div class="row" style="margin-top:20px">
            <div class="col-md-8">
                <strong> @Html.DisplayNameFor(model => Model[0].customerid)</strong> @Html.DisplayFor(model => Model[0].customerid)<br />
                @Html.DisplayFor(model => Model[0].customer.firstname ) @Html.DisplayFor(model => Model[0].customer.lastname)<br />
                @Html.DisplayFor(model => Model[0].customer.address) <br />
                @Html.DisplayFor(model => Model[0].customer.postalcode)  @Html.DisplayFor(model => Model[0].customer.postalarea)<br />
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-5">
                        <h4><strong>@Html.DisplayNameFor(model => Model[0].orderId ):</strong></h4>
                    </div>
                    <div class="col-md-6">
                        <h4>@Html.DisplayFor(model => Model[0].orderId)</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <h4><strong>@Html.DisplayNameFor(model => Model[0].orderdate):</strong></h4>
                    </div>
                    <div class="col-md-6">
                        <h4>@Html.DisplayFor(model => Model[0].orderdate)</h4>
                    </div>
                </div>
            </div>
        </div>






            <div class="panel panel-default">
                <table>
                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(modelItem => Model[0].id)</b>
                        </td>
                        <td>
                            <b>@Html.DisplayNameFor(modelItem => Model[0].product.itemnumber)</b>
                        </td>
                        <td>
                            <b>@Html.DisplayNameFor(modelItem => Model[0].product.name)</b>
                        </td>
                        <td>
                            <b>@Html.DisplayNameFor(modelItem => Model[0].quantity)</b>
                        </td>
                        <td>
                            <b>@Html.DisplayNameFor(modelItem => Model[0].product.price)</b>
                        </td>
                        <td>
                            <b>@Html.DisplayNameFor(modelItem => Model[0].orderlineSum)</b>
                        </td>

                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr class="rows">
                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.orderdate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.product.itemnumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.product.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.product.price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.orderlineSum)
                            </td>

                        </tr>
                    }
                </table>

            </div>
        </div>
</div>