<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Snublevann.no - Admin</title>
    <link href="~/Content/Custom/MainSheet.css" rel="stylesheet" />
    <link href="~/Content/Custom/customNav.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script type="text/javascript">
    function toggle_visibility(id) {
       var e = document.getElementById(id);
       if(e.style.display == 'block')
          e.style.display = 'none';
       else
          e.style.display = 'block';
    }
    </script>
</head>
<body>

    <div class="container">
        <div class="navbar navbar-inner" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="row">
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                           <img src="~/Content/img/snuble_admin.png" id="logo" width="500" height="96" style="margin-top: 20px; margin-left: 20px" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <div class="navUl pull-right">
                                @if (Session["loggedInUser"] != null)
                                {
                                    <a href="#" onclick="toggle_visibility('submenuUsers');">
                                        <i class="glyphicon glyphicon-user"> </i> Brukere
                                    </a>

                                    <a href="@Url.Action("ListProducts", "Product")" id="product">
                                        <i class="glyphicon glyphicon-glass"> </i> Produkter
                                    </a>

                                    <a href="@Url.Action("ListOrders", "Order")">
                                        <i class="glyphicon glyphicon-align-justify"> </i> Ordre
                                    </a>
                                    <a href="@Url.Action("LogOut", "Main")">
                                        <i class="glyphicon glyphicon-log-out"> </i> Logg ut
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


        <div class="container body-content">
            <div id="submenuUsers" style="display:none">
                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <div class="navUl pull-right">
                            @if (Session["loggedInUser"] != null)
                            {
                                <a href="@Url.Action("ListCustomers", "Customer")">
                                    <i class="glyphicon glyphicon-user"> </i> Undermeny 1
                                </a>

                                <a href="@Url.Action("ListCustomers", "Customer")" id="product">
                                    <i class="glyphicon glyphicon-user"> </i> List alle
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            @RenderBody()


         <!-- TRENGER KANSKJE IKKE FOOTER HER?

             <div class="footer">
                <div class="jumbotron footerjumbo">
                    Copyright &copy; @DateTime.Now.Year Snublevann - All rights reserved.
                </div>
            </div>-->   

        </div>
    </body>
</html>