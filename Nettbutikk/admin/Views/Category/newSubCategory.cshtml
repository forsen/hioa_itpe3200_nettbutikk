@model Nettbutikk.admin.Models.SubCategoryDetail

@{
    ViewBag.Title = "addProductView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.9.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#verify').keyup(function () {
            if ($(this).val() == $('#password').val()) {
                $('#verifynote').addClass('hidden');
            }
            else {
                $('#verifynote').removeClass('hidden');
            }
        });

    });

</script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="formTitle">
                    <h2><span class="glyphicon glyphicon-glass"></span>  Legg til ny underkategori</h2>
                </div>
                <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                    <form role="form">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <small>@Html.LabelFor(model => model.name)</small>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.name , new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Navn på underkategori", tabindex = "1", autofocus = "" } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <small>@Html.LabelFor(model => model.categoryId)</small>
                                    @Html.DropDownListFor(x => x.categoryId, Model.categoryList, new { @id = "producer", @class = "form-control input-sm" })  
                                 </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success" tabindex="11">
                                        <i class="glyphicon glyphicon-pencil"></i>  Legg til kategori
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}