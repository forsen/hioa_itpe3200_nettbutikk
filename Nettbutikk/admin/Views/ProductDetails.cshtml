@model Nettbutikk.admin.Models.ProductInfo


@{
    ViewBag.Title = "SettingsProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="formTitle">
                    <h2><span class="glyphicon glyphicon-glass"></span>Oppdater produkt</h2>    
                </div>
                <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                    <form role="form">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <h3>Varenummer: "@Html.DisplayFor(model => model.itemnumber)"</h3>
                                    <h4>Produktnavn:</h4>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Produkt", tabindex = "1", autofocus = "" } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })         
                                    <h4>Pris:</h4>
                                    @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Beskrivelse", tabindex = "1", autofocus = "" } })
                                    @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })                           
                                    <h4>Produsent:</h4>
                                    @Html.EditorFor(model => model.producer, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Produsent", tabindex = "3" } })
                                    @Html.ValidationMessageFor(model => model.producer, "", new { @class = "text-danger" })
                                    <div class="form-group" style="width:800px;">
                                        <h4>Beskrivelse:</h4>
                                        @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Beskrivelse", tabindex = "1", autofocus = "" } })
                                        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                        <h4>Lang beskrivelse:</h4>
                                        @Html.EditorFor(model => model.longDescription, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Beskrivelse", tabindex = "1", autofocus = "" } })
                                        @Html.ValidationMessageFor(model => model.longDescription, "", new { @class = "text-danger" })
                                    </div>
                                    <h4>Volum:</h4>
                                    @Html.EditorFor(model => model.volum, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Beskrivelse", tabindex = "1", autofocus = "" } })
                                    @Html.ValidationMessageFor(model => model.volum, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success" tabindex="11">
                                        <i class="glyphicon glyphicon-pencil"></i>  Lagre endringer
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}