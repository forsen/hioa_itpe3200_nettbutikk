@model Nettbutikk.Models.Customer

@{
    ViewBag.Title = "updateUserPassword";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="col-md-6">
        <div class="form-horizontal">
            <h4>Endre passord</h4>
            
            <div class="form-group">
                @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="password" placeholder="Nåværende passord" name="op" class="form-control">
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="password" placeholder="Nytt passord" name="np" class="form-control">
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="password" placeholder="Bekreft nytt passord" name="bp" class="form-control">
                </div>
            </div>
            @if (ViewBag.correct != null)
            {
                <div class="alert alert-danger" role="alert">@ViewBag.correct</div>
            }
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="button" class="btn btn-default"> @Html.ActionLink("Avbryt", "PersonalSite", "Customer")</button>

                    <input type="submit" value="Endre passord" class="btn btn-success" />
                </div>
</div>
          
        </div>
    </div>
}
