@model List<Nettbutikk.Models.Product>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListProducts</title>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-1.9.0.js"></script>
</head>
    <body>
        <div class ="container">
               
            <div class="jumbotron">
               <h1>Her viser vi produktene våre</h1>
                <p>Her kan vi putte produkter osv osv og mye annet snadder. Blir moro på BEKK i mårra! Hei</p>

                <table class="table">
                    <tr>
                        <th>
                            
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].itemnumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].producer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].category)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a href=@Url.Action("viewProduct",new { id = item.itemnumber} )><span><img src=@Url.Content("~/Content/img/" + item.itemnumber + ".png") width="80" height="130" class="img-thumbnail"/></span></a>
                            </td>
                            <td>
                                @Html.ActionLink(@Html.DisplayFor(modelItem => item.itemnumber).ToString(), "viewProduct", new { id = item.itemnumber})
                               
                            </td>
                            <td>
                                @Html.ActionLink(@Html.DisplayFor(modelItem => item.name).ToString(), "viewProduct", new { id = item.itemnumber })
                            </td>
                            <td>
                                @Html.ActionLink(@Html.DisplayFor(modelItem => item.description).ToString(), "viewProduct", new { id = item.itemnumber })
                            </td>
                            <td>
                                @Html.ActionLink(@Html.DisplayFor(modelItem => item.price).ToString(), "viewProduct", new { id = item.itemnumber})
                            </td>
                            <td>
                                @Html.ActionLink(@Html.DisplayFor(modelItem => item.producer).ToString(), "viewProduct", new { id = item.itemnumber })
                            </td>
                            <td>
                                @Html.ActionLink(@Html.DisplayFor(modelItem => item.category).ToString(), "viewProduct", new { id = item.itemnumber })
                            </td>
                        </tr>
                    }

                </table>
                <br />
                <a class="btn btn-default">Gå til betaling</a>
                <a class="btn btn-info">Bli her</a>
            </div>
        </div>

        <div class="navbar navbar-default navbar-fixed-bottom">

            <div class="container">
                <p class ="navbar-text text-center"> Nettbutikk for de flinkeste dataingeniørstudentene - 2014</p>
            </div>
        </div>
    </body>
</html>
