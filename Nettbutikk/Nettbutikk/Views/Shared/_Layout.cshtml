<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-1.9.0.js"></script>




</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Alkohol Mekka", "Frontpage", "Main", new { tom = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <form method="get" action="@Url.Action("Search", "SearchProduct", "Search")">
                            <label for="search">Søk</label>
                            <input type="text" name="search" id="search" />
                            <button type="submit">Søk</button>
                        </form>
                    </li>
                    <li>@Html.ActionLink("Nytt product", "AddProduct", "Product")</li>
                    <li>@Html.ActionLink("Handlekurv", "viewShoppingCart", "ShoppingCart")</li>
                    
                    @if (Session["loggedInUser"] == null)
                    {    <li>@Html.ActionLink("Registrer", "Register", "Customer")</li>
                         <li>@Html.ActionLink("Logg Inn", "LogIn", "Customer")</li>
                    }else
                    { 
                         <li>@Html.ActionLink("MinSide", "PersonalSite", "Customer")</li>
                        <li>@Html.ActionLink("Logg Ut", "LogOut", "Customer")</li>
                    } 
                    
                    
                </ul>
            </div>
        </div>
    </div>
    <br/>
    <div class="panel panel-default pull-left">
        <div class="panel-body">
            <div class="pull-left">
                <div class="visible-lg-block">
                    <h4>Kategori:</h4>
                    <ul><a href='@Url.Action("ListProducts", "Product", new { id = 1 })'>Øl</a></ul>
                    <ul><a href='@Url.Action("ListProducts", "Product", new { id = 2 })'>Rødvin</a></ul>
                    <ul><a href='@Url.Action("ListProducts", "Product", new { id = 3 })'>Hvitvin</a></ul>
                    <ul><a href='@Url.Action("ListProducts", "Product", new { id = 4 })'>Brennevin</ul>
                </div>
                <br />
                @Html.ActionLink("Kategori", "Categories", "Category")<br />
                @Html.ActionLink("Om oss", "About", "About")<br />
            </div>
        </div>
    </div>
    <div class="container body-content">
            
        @RenderBody()
        <hr/>
        <footer>
            <p>&copy;@DateTime.Now.Year - Gruppe 12345</p>
        </footer>
    </div>
</body>
</html>