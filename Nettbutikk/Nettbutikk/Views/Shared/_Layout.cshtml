<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.0.min.map"></script>
    <script src="~/Scripts/jquery-1.9.0.min.js"></script>
    <script src="~/Scripts/Custom/Collapse.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Alkohol Mekka", "Frontpage", "Main", new { tom = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>

                        @using (Html.BeginForm())
                        {
                            <p>
                                Search: @Html.TextBox("SearchString")
                                <input type="submit" value="Søk" />
                            </p>
                        }

                    </li>
                    <li>@Html.ActionLink("Nytt product", "AddProduct", "Product")</li>
                    
                    @if(Session["loggedInUser"] == null)
                    {
                        <li>@Html.ActionLink("Registrer", "Register", "Customer")</li>
                        <li>@Html.ActionLink("Logg Inn", "LogIn", "Customer")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Handlekurv", "viewShoppingCart","ShoppingCart")</li>
                        <li>@Html.ActionLink("MinSide", "PersonalSite", "Customer")</li>   
                        <li>@Html.ActionLink("Logg ut", "LogOut", "Customer")</li> 
                    }
                    
                </ul>
            </div>
        </div>
    </div>
    <br/>
    <div class="panel panel-default pull-left">
        <div class="panel-body">
            <div class="pull-left">
                <div class="container">
                        <span>Kategori:</span>
                    </div>
                    <div class="content">
                        <ul>
                            <li><a href='@Url.Action("ListProducts", "Product", new { id = 1 })'>Øl</a></li>
                            <li><a href='@Url.Action("ListProducts", "Product", new { id = 2 })'>Rødvin</a></li>
                            <li><a href='@Url.Action("ListProducts", "Product", new { id = 3 })'>Hvitvin</a></li>
                            <li><a href='@Url.Action("ListProducts", "Product", new { id = 4 })'>Brennevin</a></li>
                        </ul>
                    </div>
                @Html.ActionLink("Kategori", "Categories", "Category")<br />
                @Html.ActionLink("Om oss", "About", "About")<br />
            </div>
        </div>
    </div>
    <div class="container body-content">
            
        @RenderBody()
        <hr/>
        <footer>
            <p>&copy;@DateTime.Now.Year - Gruppe 12345</p>
        </footer>
    </div>
</body>
</html>