<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-1.9.0.js"></script>




</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Alkohol Mekka", "ListProducts", "Product", new { tom = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <form method="get" action="@Url.Action("Search", "SearchProduct", "Search")">
                            <label for="search">Søk</label>
                            <input type="text" name="search" id="search" />
                            <button type="submit">Søk</button>
                        </form>
                    </li>
                    <li>@Html.ActionLink("Nytt product", "AddProduct", "Product")</li>
                    <li>@Html.ActionLink("Registrer", "Register", "Customer")</li>
                    <li>@Html.ActionLink("Logg Inn", "Index", "User")</li>
                    <li>@Html.ActionLink("Handlekurv", "","")</li>
                </ul>
            </div>
        </div>
    </div>
    <br/>
    <div class="panel panel-default pull-left">
        <div class="panel-body">
            <div class="pull-left">
                <li>@Html.DropDownList("Kategori", new List<SelectListItem>
                        {
                             new SelectListItem{Text = "ØL", Value="1"},
                             new SelectListItem{Text = "Rødvin", Value="2"},
                             new SelectListItem{Text = "Hvitvin", Value="3"},
                             new SelectListItem{Text = "Brennevin", Value="4"},
                             new SelectListItem{Text = "Rosevin", Value="5"},
                        }
                        )
                </li>
                @Html.ActionLink("Logg Inn", "Index", "User")  <br />
                @Html.ActionLink("Kategori", "CategoryView", "Category")<br />
                @Html.ActionLink("Om oss", "About", "About")<br />
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr/>
        <footer>
            <p>&copy;@DateTime.Now.Year - Gruppe 12345</p>
        </footer>
    </div>
</body>
</html>