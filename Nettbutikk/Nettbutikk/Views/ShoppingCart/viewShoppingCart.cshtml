@model Nettbutikk.Models.ShoppingCart

@{
    ViewBag.Title = "Handlevogn";
}
    <table class="table">
        <tr>
            <th>Antall</th>
            <th>Vare</th>
            <th>Pris</th>
        </tr>
   
        @foreach (var item in Model.shoppingCartItems) { 
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.ActionLink("Fjern", "removeItem", "ShoppingCart", new { item = item.product.itemnumber })
            </td>
        </tr>
        }

    </table>
    <footer>
        <h4>    
            SUM:
            @Html.DisplayFor(modelItem => Model.sum)
            ,-
        </h4>

        @Html.ActionLink("Sjekkut!", "checkout","ShoppingCart", new { target = "_blank" })
    </footer>
    
